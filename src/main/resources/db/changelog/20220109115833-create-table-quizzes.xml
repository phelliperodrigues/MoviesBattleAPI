<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1641740251435-5" author="Phellipe Rodrigues">
        <createTable tableName="quizzes">
            <column name="movie_one_id" type="BIGINT"/>
            <column name="movie_two_id" type="BIGINT"/>
            <column name="movie_id_selected" type="BIGINT"/>
            <column name="is_correct_answer" type="BOOLEAN"/>

            <column name="match_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_quizzes"/>
            </column>
            <column name="sequence_game" type="INT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_quizzes"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>